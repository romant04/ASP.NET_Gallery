@page
@model Gallery.Pages.EditPositionModel
@using Gallery.Models;
@{
    <link rel="stylesheet" href="~/css/upload.css" asp-append-version="true" />
    <script src="~/js/edit.js" defer></script>
}

<i id="back" class="fa-solid fa-arrow-left-long backArrow"></i>
<h1>Edit image position</h1>
<hr />
<div class="uploadFormContainer">
    <form class="uploadForm" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="UserId" />
        <div class="uploadFormGroup form-group">
            <input type="text" asp-for="Position.row" class="uploadInput form-control-file" />
            <label id="Title" asp-for="Position.row" class="floatingLabel control-label"></label>
            <span asp-validation-for="Position.row"></span>
        </div>
        <div class="uploadFormGroup form-group">
            <input type="text" asp-for="Position.column" class="uploadInput form-control-file" />
            <label id="Description" asp-for="Position.column" class="floatingLabel control-label"></label>
            <span asp-validation-for="Position.column"></span>
        </div>
        <div class="uploadFormGroup form-group">
            <input type="text" asp-for="Position.order" class="uploadInput form-control-file" />
            <label id="Order" asp-for="Position.order" class="floatingLabel control-label"></label>
            <span asp-validation-for="Position.order"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="button primary-bg large-width" />
        </div>
    </form>
</div>